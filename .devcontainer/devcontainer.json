{
  "name": "Robot Framework DevContainer",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",

  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18"
    }
  },

  "postCreateCommand": "bash .devcontainer/setup.sh",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "d-biehl.robotcode",
        "PKief.material-icon-theme"
      ]
    }
  },

  "forwardPorts": [6080],

  "remoteUser": "vscode"
}
